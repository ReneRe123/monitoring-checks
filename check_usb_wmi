Param (
    [string]$VAR
)
$exitcode = 0
if (Get-WmiObject Win32_USBControllerDevice | ForEach-Object { [wmi]$_.dependent } | select-Object description,
deviceid | Where {$_.description -eq $VAR}) {
  $out = "OK - $VAR USB-Ger채t verf체gbar."
  $exitcode = 0
}
else {
  $out = "CRITICAL - $VAR USB-Ger채t nicht verf체gbar!"
  $exitcode = 2
}
Write-Host "$out"
exit $exitcode
